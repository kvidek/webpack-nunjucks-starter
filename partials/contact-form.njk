<form class="c-contact-form" action="/contact" method="POST">
    <div class="c-contact-form__field">
        <label for="name" class="c-contact-form__label">Name</label>
        <input type="text" id="name" name="name" class="c-contact-form__input" required>
    </div>
    
    <div class="c-contact-form__field">
        <label for="email" class="c-contact-form__label">Email</label>
        <input type="email" id="email" name="email" class="c-contact-form__input" required>
    </div>
    
    <div class="c-contact-form__field">
        <label for="message" class="c-contact-form__label">Message</label>
        <textarea id="message" name="message" class="c-contact-form__textarea" rows="5" required></textarea>
    </div>
    
    <div class="c-contact-form__submit">
        {% from "components/button.njk" import button %}
        {{ button("#", "Send Message", "submit", "c-contact-form__button") }}
    </div>
</form> 